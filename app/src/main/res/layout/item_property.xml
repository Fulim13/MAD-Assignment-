<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Property Image -->
    <ImageView
        android:id="@+id/property_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Property Image"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_home_24" />

    <!-- Property Name -->
    <TextView
        android:id="@+id/property_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!-- Property Price -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- Existing TextView -->
        <TextView
            android:id="@+id/property_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>


    <!-- Property Address -->
    <TextView
        android:id="@+id/property_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:text=""
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <!-- Property City -->
    <TextView
        android:id="@+id/property_city"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:text=""
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <!-- Property State -->
    <TextView
        android:id="@+id/property_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:text=""
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <!-- Total Bedroom -->
    <TextView
        android:id="@+id/property_bedroom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:text=""
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <!-- Total Bathroom -->
    <TextView
        android:id="@+id/property_bathroom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:text=""
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <!-- Property Description -->
    <TextView
        android:id="@+id/property_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:text=""
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />
</LinearLayout>
