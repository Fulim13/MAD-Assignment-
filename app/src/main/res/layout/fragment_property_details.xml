<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".main.propertyDetails">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".main.propertyDetails">

        <!-- Image Slider (Primary Image) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/property_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:contentDescription="property image"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_image_not_found_free_vector" />

            <!-- Favorite Button -->
            <Button
                android:id="@+id/button_add_to_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="12dp"
                android:text="Add to Favorites"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background_add_to_favorites" />


            <!-- Rating -->
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/image_rating_star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Rating star"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/text_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.9"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>

        <!-- Property Details -->
        <TextView
            android:id="@+id/property_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Property Name"
            android:textSize="24sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/property_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Property Price"
            android:textSize="20sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Address -->
        <TextView
            android:id="@+id/property_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Property Address"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />

        <!-- City -->
        <TextView
            android:id="@+id/property_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="City"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />

        <!-- State -->
        <TextView
            android:id="@+id/property_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="State"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Total Bathroom and Bedroom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Bedroom icon"
                    android:src="@drawable/resource_double" />

                <TextView
                    android:id="@+id/property_bedroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Total Bedrooms"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Bathroom icon"
                    android:src="@drawable/public_toilet" />

                <TextView
                    android:id="@+id/property_bathroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Total Bathrooms"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/property_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Property Description"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Reviews and Ratings -->
        <TextView
            android:id="@+id/text_reviews_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reviews"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Review 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/text_review_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Review 1"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rating_bar_review_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.5" />

        </LinearLayout>

        <!-- Review 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/text_review_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Review 2"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rating_bar_review_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:numStars="5"
                android:rating="3.5"
                android:stepSize="0.5" />

        </LinearLayout>



    </LinearLayout>
</ScrollView>
    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/action_buttons_container"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_schedule_viewing"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Schedule Viewing"
            android:textSize="16sp"
            android:backgroundTint="@color/button"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_rent_now"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rent Now"
            android:textSize="16sp"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>